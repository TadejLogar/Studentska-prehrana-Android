<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content">
			
			<LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:paddingLeft="8dp" android:paddingRight="8dp">

				<ImageView
				    android:id="@+id/imageViewIcon"
				    android:layout_width="wrap_content"
				    android:layout_height="73dp"
				    android:layout_weight="1.46"
				    android:src="@drawable/icon" />

				<TextView android:text="Ime ponudnika" android:layout_weight="1" android:layout_width="wrap_content" android:textColor="#0094FF" android:id="@+id/name" android:layout_height="wrap_content" android:textSize="23sp"></TextView>
				<TextView android:textColor="#A4C639" android:gravity="right" android:text="Doplačilo" android:layout_weight="1" android:layout_width="wrap_content" android:id="@+id/fee" android:layout_height="wrap_content" android:textSize="18sp"></TextView>
			</LinearLayout> 
			<LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:paddingLeft="8dp" android:paddingRight="8dp">
				<TextView android:text="Naslov" android:layout_width="wrap_content" android:id="@+id/address" android:layout_height="wrap_content"></TextView>
				<TextView android:gravity="right" android:text="€" android:layout_weight="1" android:layout_width="wrap_content" android:textColor="#00ff00" android:id="@+id/openTime" android:layout_height="wrap_content"></TextView>
			</LinearLayout>


</LinearLayout>